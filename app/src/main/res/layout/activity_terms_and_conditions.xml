<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userlogin.TermsAndConditionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/suraksha"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bar"
        app:srcCompat="@drawable/chevron_left" />

    <TextView
        android:id="@+id/privacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:elevation="4dp"
        android:text="Terms &amp; Conditions"
        android:textColor="@color/white"
        android:fontFamily="@font/productsans_medium"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="@id/bar" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="72dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/instruction_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Updated: 23.08.2023"
                        android:fontFamily="@font/productsans_black"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/contact_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:textSize="16sp"
                        android:text="Welcome to Suraksha!"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/instruction_date" />

                    <TextView
                        android:id="@+id/terms_and_conditions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/terms_and_conditions"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/contact_header" />

                    <TextView
                        android:id="@+id/general_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/general_use"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/terms_and_conditions" />

                    <TextView
                        android:id="@+id/general_use_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/general_use_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/general_use" />

                    <TextView
                        android:id="@+id/security_and_features"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/security_and_features"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/general_use_detail" />

                    <TextView
                        android:id="@+id/security_and_features_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/security_and_features_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/security_and_features" />

                    <TextView
                        android:id="@+id/user_responsibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/user_responsibility"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/security_and_features_detail" />

                    <TextView
                        android:id="@+id/user_responsibility_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/user_responsibility_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/user_responsibility" />
                    <TextView
                        android:id="@+id/limitation_of_liability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/limitation_of_liability"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/user_responsibility_detail" />

                    <TextView
                        android:id="@+id/limitation_of_liability_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/limitation_of_liability_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/limitation_of_liability" />

                    <TextView
                        android:id="@+id/data_and_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/data_and_privacy"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/limitation_of_liability_detail" />


                    <TextView
                        android:id="@+id/data_and_privacy_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/data_and_privacy_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/data_and_privacy" />
                    <TextView
                        android:id="@+id/update_and_changes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/update_and_changes"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/data_and_privacy_detail" />

                    <TextView
                        android:id="@+id/update_and_changes_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/update_and_changes_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/update_and_changes" />
                    <TextView
                        android:id="@+id/termination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/termination"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/update_and_changes_detail" />

                    <TextView
                        android:id="@+id/termination_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/termination_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/termination" />


                    <TextView
                        android:id="@+id/governing_law"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/governing_law"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/termination_detail" />

                    <TextView
                        android:id="@+id/governing_law_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/governing_law_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/governing_law" />

                    <TextView
                        android:id="@+id/dispute_resolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/dispute_resolution"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/governing_law_detail" />

                    <TextView
                        android:id="@+id/dispute_resolution_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/dispute_resolution_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dispute_resolution" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/contact"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dispute_resolution_detail" />

                    <TextView
                        android:id="@+id/contact_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/contact_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/contact" />

                    <TextView
                        android:id="@+id/conclusion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_medium"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:text="@string/conclusion"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/contact_detail" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_regular"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/conclusion_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/conclusion"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>